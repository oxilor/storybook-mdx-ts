{
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "cross-env NODE_ENV=test jest --silent",
    "sb": "start-storybook -p 6006",
    "sb:no-cache": "yarn sb --no-manager-cache",
    "build": "lerna run build --stream",
    "ncu": "ncu -u && lerna exec yarn ncu",
    "l:version": "lerna version --no-changelog --yes",
    "l:publish": "lerna publish from-git --yes",
    "l:release": "yarn build && yarn test && yarn l:version && yarn l:publish",
    "l:release-force": "yarn build && yarn test && yarn l:version --force-publish && yarn l:publish",
    "lint": "eslint --fix .",
    "lint-check": "eslint .",
    "pretty": "prettier --write --ignore-unknown .",
    "pretty-check": "prettier --check .",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@os-team/prettier-config": "^1.1.5",
    "@storybook/addon-a11y": "^6.3.4",
    "@storybook/addon-actions": "^6.3.4",
    "@storybook/addon-docs": "^6.3.4",
    "@storybook/addon-essentials": "^6.3.4",
    "@storybook/addon-links": "^6.3.4",
    "@storybook/addon-storyshots": "^6.3.4",
    "@storybook/react": "^6.3.4",
    "@storybook/theming": "^6.3.4",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@types/jest": "^26.0.24",
    "@types/react": "^17.0.14",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@whitespace/storybook-addon-html": "^5.0.0",
    "babel-jest": "^27.0.6",
    "cross-env": "^7.0.3",
    "eslint": ">=7",
    "eslint-config-os-team-react": "1.1.17",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "typescript": "4.3.5"
  }
